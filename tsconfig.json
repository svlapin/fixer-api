{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es2015"
    ],
    "rootDir": ".",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": [
      "node",
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
